<Window x:Class="PuntoDeVenta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PuntoDeVenta.Views"
        Title="Punto de Venta" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundPrimaryBrush}"
        WindowState="Maximized">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- ========== SIDEBAR ========== -->
        <Border Grid.Column="0" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo / Título -->
                <StackPanel Grid.Row="0" Margin="20,25,20,20">
                    <TextBlock Text="🛒 PUNTO DE VENTA" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Sistema de Gestión" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Menú de Navegación -->
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Button x:Name="btnDashboard" Style="{StaticResource SidebarButton}" 
                            Content="📊  Dashboard" Click="NavButton_Click" Tag="Dashboard"/>
                    <Button x:Name="btnVentas" Style="{StaticResource SidebarButton}" 
                            Content="💰  Nueva Venta" Click="NavButton_Click" Tag="Ventas"/>
                    <Button x:Name="btnProductos" Style="{StaticResource SidebarButton}" 
                            Content="📦  Productos" Click="NavButton_Click" Tag="Productos"/>
                    <Button x:Name="btnClientes" Style="{StaticResource SidebarButton}" 
                            Content="👥  Contactos" Click="NavButton_Click" Tag="Clientes"/>
                    <Button x:Name="btnCompras" Style="{StaticResource SidebarButton}" 
                            Content="🛍️  Compras" Click="NavButton_Click" Tag="Compras"/>
                    <Button x:Name="btnReportes" Style="{StaticResource SidebarButton}" 
                            Content="📈  Reportes" Click="NavButton_Click" Tag="Reportes"/>
                    <Button x:Name="btnConfig" Style="{StaticResource SidebarButton}" 
                            Content="⚙️  Configuración" Click="NavButton_Click" Tag="Config"/>
                </StackPanel>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="20,0,20,20">
                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,15"/>
                    <TextBlock Text="v1.2.0" 
                               FontSize="11" 
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- ========== CONTENIDO PRINCIPAL ========== -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Aquí se cargará el contenido dinámicamente -->
            <ContentControl x:Name="MainContent"/>
        </Grid>
    </Grid>
</Window>

<Window x:Class="PuntoDeVenta.Views.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ” ActivaciÃ³n de Licencia"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0f0f1a">
    
    <Grid Margin="35,30,35,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- TÃ­tulo -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
            <TextBlock Text="ðŸ” ActivaciÃ³n de Licencia" 
                       FontSize="26" 
                       FontWeight="Bold"
                       Foreground="#f8fafc"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Ingrese su clave de licencia para activar el software" 
                       FontSize="13"
                       Foreground="#64748b"
                       Margin="0,12,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Campo de Licencia -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”‘ CLAVE DE LICENCIA" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Foreground="#10b981"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"/>
            <Border Background="#1a1a2e" 
                    CornerRadius="10" 
                    BorderBrush="#3d3d5c"
                    BorderThickness="2"
                    Padding="8">
                <TextBox x:Name="txtLicenseKey" 
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="24"
                         FontWeight="Bold"
                         FontFamily="Consolas"
                         Foreground="#f8fafc"
                         CaretBrush="#0ea5e9"
                         TextAlignment="Center"
                         MaxLength="19"
                         CharacterCasing="Upper"
                         Padding="12,8"
                         VerticalContentAlignment="Center"/>
            </Border>
            <TextBlock Text="Formato: POS1-XXXX-XXXX-2026" 
                       FontSize="11"
                       Foreground="#64748b"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Estado -->
        <Border Grid.Row="2" x:Name="borderStatus" 
                CornerRadius="8" 
                Padding="12" 
                Visibility="Collapsed"
                Margin="0,0,0,15">
            <TextBlock x:Name="txtStatus" 
                       FontSize="13"
                       FontWeight="SemiBold"
                       TextAlignment="Center"/>
        </Border>
        
        <!-- Espacio flexible -->
        <Grid Grid.Row="3"/>
        
        <!-- Botones -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" 
                    Content="âŒ Salir" 
                    Background="#2d2d44"
                    Foreground="#94a3b8"
                    BorderThickness="0"
                    Padding="20,14"
                    FontSize="14"
                    Cursor="Hand"
                    Click="Exit_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="2" 
                    Content="âœ… Activar Licencia" 
                    Background="#10b981"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,14"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="Activate_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>

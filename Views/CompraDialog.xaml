<Window x:Class="PuntoDeVenta.Views.CompraDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nueva Compra" 
        Height="700" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundPrimaryBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ›ï¸ Nueva Compra" 
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Registrar compra a proveedor" 
                       FontSize="13" 
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Datos del Proveedor -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundSecondaryBrush}" 
                CornerRadius="10" 
                Padding="15,12" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="NÂº Factura *" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNumeroFactura" 
                             Background="{StaticResource BackgroundTertiaryBrush}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="10,6"
                             FontSize="13"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Proveedor *" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbProveedor" 
                              IsEditable="True"
                              Style="{StaticResource ModernComboBox}"
                              Height="35"
                              FontSize="13"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Fecha" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFecha" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Agregar Productos -->
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundSecondaryBrush}" 
                CornerRadius="10" 
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="ðŸ“¦ Productos de la Compra" 
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,10"/>
                
                <!-- Labels de columnas -->
                <Grid Grid.Row="1" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="95"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Producto *" 
                               FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                    <TextBlock Grid.Column="1" Text="Cant." 
                               FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Precio $" 
                               FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                </Grid>
                
                <!-- Agregar producto -->
                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="95"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox x:Name="cmbProducto" 
                              Grid.Column="0"
                              Style="{StaticResource ModernComboBox}"
                              Padding="8,6"
                              FontSize="13"
                              IsEditable="True"
                              DisplayMemberPath="Nombre"
                              SelectionChanged="CmbProducto_SelectionChanged"
                              Margin="0,0,8,0"/>
                    
                    <ComboBox x:Name="cmbTipoCompra" 
                              Grid.Column="1"
                              Style="{StaticResource ModernComboBox}"
                              Height="35"
                              SelectedIndex="0"
                              Margin="0,0,8,0">
                        <ComboBoxItem Content="Unidad"/>
                        <ComboBoxItem Content="Bulto"/>
                    </ComboBox>
                    
                    <TextBox x:Name="txtCantidad" 
                             Grid.Column="2"
                             Background="{StaticResource BackgroundTertiaryBrush}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="8,6"
                             FontSize="13"
                             Text="1"
                             TextAlignment="Center"
                             Margin="0,0,8,0"/>
                    
                    <TextBox x:Name="txtPrecioUnitario" 
                             Grid.Column="3"
                             Background="{StaticResource BackgroundTertiaryBrush}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="8,8"
                             FontSize="13"
                             Text="0.00"
                             TextAlignment="Right"
                             Margin="0,0,8,0"/>
                    
                    <Button Grid.Column="4" 
                            Content="âž• Agregar" 
                            Style="{StaticResource AccentButton}"
                            Padding="8,8"
                            FontSize="12"
                            Click="AgregarProducto_Click"/>
                </Grid>
                
                <!-- Lista de productos -->
                <Border Grid.Row="3" 
                        Background="{StaticResource BackgroundTertiaryBrush}" 
                        CornerRadius="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstProductos">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundSecondaryBrush}" 
                                            Margin="5" Padding="12" CornerRadius="6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Nombre}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Cantidad}" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PrecioFormateado}" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="3" Text="{Binding SubtotalFormateado}" 
                                                       Foreground="{StaticResource AccentBrush}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <Button Grid.Column="4" Content="âœ•" 
                                                    Background="Transparent"
                                                    Foreground="{StaticResource DangerBrush}"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="EliminarProducto_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <!-- Totales -->
        <Border Grid.Row="3" 
                Background="{StaticResource BackgroundSecondaryBrush}" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,15,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="TOTAL:" 
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBlock x:Name="txtTotal" Text="$ 0.00" 
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Botones -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancelar" 
                    Style="{StaticResource PrimaryButton}"
                    Width="120" Padding="0,12"
                    Margin="0,0,15,0"
                    Click="Cancelar_Click"/>
            <Button Content="ðŸ’¾ Guardar Compra" 
                    Style="{StaticResource AccentButton}"
                    Width="160" Padding="0,12"
                    Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</Window>

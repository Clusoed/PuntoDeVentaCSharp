            <TextBox x:Name="txtCedula" 
                     Style="{StaticResource ModernTextBox}"
                     FontSize="13" Padding="10,8"/>
        </StackPanel>
        
        <!-- TelÃ©fono y Email -->
        <Grid Grid.Row="4" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
